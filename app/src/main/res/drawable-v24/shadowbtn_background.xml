<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="@color/black_light"/>
                    <!-- alttan gölge -->
                    <corners android:radius="30dp"/>
                </shape>
            </item>
            <!-- BUTTON alttan gölge
              android:right="5px" to make it round-->
            <item

                android:bottom="5px"
                android:right="5px"
                android:left="5px"

                >
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient

                        android:angle="270"
                        android:startColor="#990614"
                        android:centerColor="#B60214"
                        android:endColor="#F13D52"
                        android:type="linear"/>
                    <corners
                        android:radius="30dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="5dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>


</selector>